@model WebMVC.Models.AutenticacionViewModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-container">

    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header" align="center">
                @*<a href='#'>
                    <img class="" id="img_logo" src="~/img/logo.png">
                </a>*@


                @*<button type="button" class="close" data-dismiss="modal" aria-label="Close" onclick="location.href = '@Url.Action("IniciarSesion")'">
                    <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                </button>*@
				<div class="titulo_seccion">Iniciar Sesión</div>
				<br />
                <div class="login-body">

                    @using (Html.BeginForm("IniciarSesion", "Cuenta", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form", autocomplete = "off" }))
                    {
                        @Html.ValidationSummary(true, "", new { @style = "color:#FFF;" })

                        <div class="logo-login">
                            <a href="~/Home/Index"></a>
                        </div>
                        if (@Model.msg != null)
                        {
                            <div class="login-subtitle"><strong>@Model.msg </strong></div>
                        }

                        <div class="form-group">
                            <div class="col-md-12">

                                <div class="col-md-12">
                                    @Html.TextBoxFor(m => m.NombreUsuario, new { @class = "form-control", @maxlength = "200", @autocomplete = "off", placeholder = "Correo electrónico" })
                                    @Html.ValidationMessageFor(m => m.NombreUsuario, String.Empty, new { @style = "color: #FF0000;" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12">

                                <div class="col-md-12">
                                    @Html.PasswordFor(m => m.Contrasena, new { @class = "form-control", autocomplete = "off", placeholder = "Contraseña" })
                                    @Html.ValidationMessageFor(m => m.Contrasena, String.Empty, new { @style = "color:#FF0000;" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12">

                                <label class="tipo_azul">
                                    <input type="checkbox" id="Recordarme"> Recordarme
                                </label>
                                <div class="tipo_azul">
                                    <a href="@Url.Action("RecuperarContrasena")" class="btn btn-link tipo_azul">Olvidaste la contraseña</a>

                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">	
                                    <input type="submit" value="Entrar" class="btn btn-primary" />                               
                                    <button id="btnsolicitud" type="button" class="btn btn-primary" onclick="location.href='/Account/Register'">Registrarse</button>
                                </div>
                            </div>
                        </div>
                        <hr />
                       @* <div class="subtitulo-login">
		O Ingresa con
	</div><br />
	<div class="form-group">
		<div class="col-md-6">
			<input type="button" class="btn btn-facebook" onclick="" />
		</div>
		<div class="col-md-5">
			<input type="button" class="btn btn-google" onclick="" />

		</div>
	</div>*@
					}
                </div>
            </div>
            <!-- End # DIV Form -->

        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


