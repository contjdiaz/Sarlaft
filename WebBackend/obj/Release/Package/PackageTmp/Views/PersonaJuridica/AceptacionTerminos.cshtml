				EGRESOS_MENSUALES: $("#EGRESOS_MENSUALES").val(),
				OTROS_INGRESOS_MENSUALES : $("#OTROS_INGRESOS_MENSUALES").val(),
				OTROS_CONCEPTOS : $("#OTROS_CONCEPTOS").val()
			};
			$.ajax({
				url: url,
				type: 'POST',
				data: PersonaViewModel,
				success: function (data) {
					debugger;
