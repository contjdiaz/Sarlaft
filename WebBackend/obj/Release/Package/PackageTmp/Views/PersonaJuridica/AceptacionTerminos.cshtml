@section Scripts {
    <script type="text/javascript">
		$('#btnImprimir').click(function () {

			if (!$('#AUTORIZACION_DATOS').is(":checked") || !$("#DECLARACION_BIENES").is(":checked")) {
				alert("Debe acpetar el tratamiento de datos");
