@using GridMvc.Html
@model WebBackend.Models.PersonaNaturalViewModel

<div class="row">
	<div class="form-group">
		<div class=" col-md-4">
			<label>¿Es Usted Una Persona Expuesta Políticamente? (Decreto 1674 de 2016)</label>		
				@Html.DropDownListFor(model => model.DECRETO_1674, (SelectList)ViewBag.ListSiNo, new { @class = "form-control addPEP soloLectura" })
				@Html.ValidationMessageFor(model => model.DECRETO_1674, "", new { @class = "text-danger" })
		</div>
		<div class=" col-md-4">
			<label>¿Es Usted Representante Legal De Una Organización Internacional?</label>		
				@Html.DropDownListFor(model => model.REP_ORG_INTERNACIONAL, (SelectList)ViewBag.ListSiNo, new { @class = "form-control addPEP soloLectura" })
				@Html.ValidationMessageFor(model => model.REP_ORG_INTERNACIONAL, "", new { @class = "text-danger" })			
		</div>
		<div class="col-md-4">
			<label>¿Es Usted Una Persona Que Goza De Reconocimiento Público?</label>		
				@Html.DropDownListFor(model => model.RECONOCIMIENTO_PUB, (SelectList)ViewBag.ListSiNo, new { @class = "form-control addPEP soloLectura" })
				@Html.ValidationMessageFor(model => model.RECONOCIMIENTO_PUB, "", new { @class = "text-danger" })
		</div>
	</div>
</div>
<div class="row">
	<div class="form-group">
		<div class="col-md-4">
			<label>¿Existe Algún Vínculo Entre Usted y Una Persona Públicamente Expuesta?</label>		
				@Html.DropDownListFor(model => model.VINCULO_PEP, (SelectList)ViewBag.ListSiNo, new { @class = "form-control addPEP soloLectura" })
				@Html.ValidationMessageFor(model => model.VINCULO_PEP, "", new { @class = "text-danger" })
		</div>
		<div class=" col-md-4">
			<label>Entidad PEP</label>		
				@Html.EditorFor(model => model.ENTIDAD_PEP, new { htmlAttributes = new { @class = "form-control soloLectura" } })	
				@Html.ValidationMessageFor(model => model.ENTIDAD_PEP, "", new { @class = "text-danger" })
		</div>
		<div class="col-md-4">
			<label>Cargo u ocupación PEP</label>	
			@Html.DropDownListFor(model => model.ID_CARGO_PEP, (SelectList)ViewBag.listCargoPEP,"Seleccione un valor", new { @class = "form-control soloLectura" })
		</div>
	</div>
</div>
<div class="row">
	<div class="form-group">
		<div class=" col-md-4">

			<label>Fecha de vinculación PEP</label>
			@Html.EditorFor(model => model.FEC_VINCULA_PEP, new { htmlAttributes = new { @class = "form-control datepicker fecha soloLectura" } })
		</div>
		<div class=" col-md-4">
			<label>Fecha de desvinculación PEP</label>
			@Html.EditorFor(model => model.FEC_DESVINCULA_PEP, new { htmlAttributes = new { @class = "form-control datepicker fecha soloLectura" } })
		</div>
		<div class=" col-md-4">
			<label>Fecha final PEP</label>
			@Html.Editor("FechaDesvCargoPep", new { htmlAttributes = new { @class = "form-control datepicker fecha", @disabled = "disabled" } })
		</div>
	</div>
</div>
<div class="row">
	<div class="form-group">		
		<div class=" col-md-6">
			@Html.ValidationSummary(true, "", new { @class = "text-danger" })
		</div>
	</div>
	</div>


<div class="row">
	<div id="operacionTabla">
		@Html.Action("_TablaRelacionadosPEP", new { Id = Model.ID_PERSONA, Eliminar = 0 })
	</div>
</div>

	<div id="modalIRPEP" class="modal fade" role="dialog">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-body">
					<div class="x_panel">
						@Html.Partial("~/Views/Shared/_AdicionarDatosPersonaPublica.cshtml", new WebBackend.Models.RelacionadoPepViewModel())
					</div>
				</div>

			</div>
		</div>
	</div>

